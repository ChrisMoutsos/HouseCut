<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.housecut">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.android.housecut.HouseCutApp"
        android:allowBackup="true"
        android:icon="@mipmap/housecutlogo"
        android:label="Housecut"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".login_activity"
            android:label="Login Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".register_activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Register Activity" />

        <activity
            android:name=".main_page_activity"
            android:label="Main Page Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity
            android:name=".grocery_list_activity"
            android:label="Grocery List Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity
            android:name=".task_list_activity"
            android:label="Task List Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity
            android:name=".settings_activity"
            android:label="Settings Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity
            android:name=".join_household_activity"
            android:label="No Household Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity
            android:name=".create_household_activity"
            android:label="Create Household Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".change_username_activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Change Username Activity" />
        <activity
            android:name=".leave_household_activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Leave Household Activity" />
        <activity
            android:name=".rename_household_activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Rename Household Activity" />


    </application>

</manifest>